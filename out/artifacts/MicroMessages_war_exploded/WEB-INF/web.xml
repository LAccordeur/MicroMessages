<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>ListServlet</servlet-name>
        <servlet-class>com.guoyang.servlet.ListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListServlet</servlet-name>
        <url-pattern>/list.action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteOneServlet</servlet-name>
        <servlet-class>com.guoyang.servlet.DeleteOneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteOneServlet</servlet-name>
        <url-pattern>/deleteOneServlet.action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteBatchServlet</servlet-name>
        <servlet-class>com.guoyang.servlet.DeleteBatchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteBatchServlet</servlet-name>
        <url-pattern>/deleteBatchServlet.action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InitTalkServlet</servlet-name>
        <servlet-class>com.guoyang.servlet.InitTalkServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InitTalkServlet</servlet-name>
        <url-pattern>/initTalk.action</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AutoReplyServlet</servlet-name>
        <servlet-class>com.guoyang.servlet.AutoReplyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AutoReplyServlet</servlet-name>
        <url-pattern>/AutoReplyServlet.action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateCommandServlet</servlet-name>
        <servlet-class>com.guoyang.servlet.UpdateCommandServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCommandServlet</servlet-name>
        <url-pattern>/updateCommandServlet.action</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AddCommandServlet</servlet-name>
        <servlet-class>com.guoyang.servlet.AddCommandServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCommandServlet</servlet-name>
        <url-pattern>/addCommandServlet.action</url-pattern>
    </servlet-mapping>
</web-app>